#!/bin/bash

#SBATCH --array=0-15
#SBATCH --cpus-per-task=16
#SBATCH --mem=249G
#SBATCH --time=30:00:00
#SBATCH -p epyc-256

module load anaconda3/latest

source activate ~/.conda/envs/hiwi-polaron

